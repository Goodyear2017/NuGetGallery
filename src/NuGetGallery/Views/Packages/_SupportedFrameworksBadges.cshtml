@using String = NuGetGallery.Strings;
@using NuGetGallery.Frameworks;
@model IReadOnlyList<PackageFrameworkCompatibilityBadge>

<div class="framework framework-badges">

    @foreach (var badge in Model)
    {
        if (badge.Framework.GetBadgeVersion().IsEmpty())
        {
            <span class="framework-badge-asset" aria-label="@String.SupportedFrameworks_EmptyVersionTooltip" data-content="@String.SupportedFrameworks_EmptyVersionTooltip">@badge.FrameworkProduct</span>
        }
        else
        {
            <span class="framework-badge-asset" aria-label="@String.SupportedFrameworks_Tooltip" data-content="@String.SupportedFrameworks_Tooltip">@(badge.FrameworkProduct + " " + badge.Framework.GetBadgeVersion() + (badge.IsHighestVersion ? "" : " +"))</span>
        }
    }
</div>